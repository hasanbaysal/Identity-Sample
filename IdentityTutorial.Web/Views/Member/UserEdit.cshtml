
@{
    ViewData["Title"] = "UserEdit";
}
@model UserEditViewModel
<h1>UserEdit</h1>





<div class="row">
   <div class="alert alert-danger" asp-validation-summary="ModelOnly">
    </div>

    <div class="col-md-8 mx-auto">
        @if (TempData["successMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["successMessage"]
            </div>
        }   
        <form asp-action="UserEdit" asp-controller="Member" method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label asp-for="UserName" class="col-sm-2 col-form-label p-0 mb-1"></label>
                <input class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <label asp-for="Email" class="col-sm-2 col-form-label p-0 mb-1"></label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="Phone" class="col-sm-2 col-form-label p-0 mb-1"></label>
                <input class="form-control" asp-for="Phone">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
             <div class="row mb-3">
                <label asp-for="BirthDate" class="col-sm-2 col-form-label p-0 mb-1"></label>
                <input class="form-control" asp-for="BirthDate">
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
          
           <div class="row mb-3">
                <label asp-for="City" class="col-sm-2 col-form-label p-0 mb-1"></label>
                <input class="form-control" asp-for="City">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

           <div class="row mb-3">
                <label asp-for="Gender" class="col-sm-2 col-form-label p-0 mb-1"></label>
               
                <select class="form-control" asp-for="Gender" asp-items="@ViewBag.genderList">
                    <option value="">Gender</option>

                </select>
              
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
          
          
            
             <div class="row mb-3">
                <label asp-for="Picture" class="col-sm-2 col-form-label p-0 mb-1"></label>
               
              <input type="file" asp-for="Picture" class="form-control"/>
              
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary ">Edit</button>
 
        </form>
    
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial">
}
