@{
    ViewData["Title"] = "SingIn";
}
@model SignInViewModel
<h1>SingIn</h1>




<div class="row">
    <div class="col-md-6 mx-auto">

        @if (TempData["ResetMessage"] != null)
        {
            @*temp data üzerinden *@
            <div class="aler alert-success "> @TempData["ResetMessage"]!.ToString(); </div>
        }

        <form  asp-route-returnUrl="@Context.Request.Query["returnUrl"]" asp-action="SignIn" asp-controller="Home" method="post">

            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="form-group mt-2">
                <label asp-for="RememberMe"></label>
                <input class="form-check-input" asp-for="RememberMe">
                <span asp-validation-for="RememberMe" class="text-danger"></span>
          
            </div>



            
            <div class="row">
                <div class="col-md-12 mt-2 mx-auto">
                    <button type="submit" class="btn btn-primary mt-2">sign in</button>

                    <a class="btn btn-outline-secondary mb-0 float-end" asp-action="ForgetPassword" asp-controller="Home">Forgot Password ?</a>
                </div>
              
              
            </div>
        </form>

    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial"/>
}               