@{
    ViewData["Title"] = "ResetPassword";
}
@model ForgetPasswordViewModel
<h1>Reset Password</h1>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
       
        @TempData["success"]


    </div>
}


@if (TempData["notvalid"] != null)
{
   <div class="alert alert-danger">
        @TempData["notvalid"]
   </div>
}



<div class="row">


    <div class="alert alert-danger" asp-validation-summary="ModelOnly">
    </div>
    <h5>Password reset link will be sent to your e-mail address.</h5>
    <div class="col-md-8 mx-auto">
        <form asp-action="ForgetPassword" asp-controller="Home" method="post">
            <div class="row mb-3">
                <label asp-for="Email" class="col-sm-2 col-form-label p-0 mb-1"></label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary ">Reset Password</button>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial">}
